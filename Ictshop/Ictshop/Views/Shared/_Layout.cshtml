            <br />
            <span>@Html.ActionLink("Trang chủ", "Index", "Home") </span>*@
                    </li>

                    <li>
                        <a href="@Url.Action("Contact", "Home")"><span style="color:black;"><strong>LIÊN HỆ</strong></span></a>
                    </li>
                    <li>
                        <a href="https://localhost:44322/#aboutUs"><span style="color:black"><strong>CHÍNH SÁCH</strong></span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Create", "LienHe")"><span style="color:black"><strong>GÓP Ý</strong></span></a>
                    </li>
                </ul>
            </div>

        </div>
        </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<div>
            <img class="img-responsive" src="~/HinhanhSP/ban2.jpg" />
        </div>*@
        <br />
