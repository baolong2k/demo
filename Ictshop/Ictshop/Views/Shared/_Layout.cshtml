                        <button style="outline:none;border:0;background-color:white;"><img style=" width: 25px; height: 20px" src="~/HinhanhSP/search.png" /></button>
                        @*<button  type="submit">Search</button>*@
                    </form>
                </div>
                }
            </div>
                
          </div>
         
            <div class="navbar-collapse collapse">

                <ul style="padding-top:8px;padding-bottom:5px;" class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")"><span style="color:black"><strong>TRANG CHỦ</strong></span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "TatCaSanPham")"><span style="color:black"><strong>CỬA HÀNG</strong></span></a>
                        @*@Html.ActionLink("ĐIỆN THOẠI", "Index", "TatCaSanPham")*@
